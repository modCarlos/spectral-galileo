<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Identificador único del servicio -->
    <key>Label</key>
    <string>com.spectral-galileo.alerts</string>
    
    <!-- Comando a ejecutar -->
    <key>ProgramArguments</key>
    <array>
        <string>/Users/carlosfuentes/GitHub/spectral-galileo/venv/bin/python</string>
        <string>/Users/carlosfuentes/GitHub/spectral-galileo/main.py</string>
        <string>--alerts</string>
        <string>start</string>
    </array>
    
    <!-- Directorio de trabajo -->
    <key>WorkingDirectory</key>
    <string>/Users/carlosfuentes/GitHub/spectral-galileo</string>
    
    <!-- Iniciar al arrancar el sistema -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Reiniciar si se detiene inesperadamente -->
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
